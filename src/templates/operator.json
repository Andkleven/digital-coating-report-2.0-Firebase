    "itemRubberCementsBeforeCoating": {
      "queryPath": "operator",
      "pages": [
        {
          "pageTitle": "Item Rubber Cement Before Coating",
          "queryPath": "operator",
          "fields": [
            {
              "specValueList": "leadEngineer.data.itemRubberCementsBeforeCoating",
              "label": "Item Rubber Cement:"
            },
            {
              "fieldName": "itemRubberCementsBeforeCoatingMixDate",
              "required": true,
              "label": "Batch Number",
              "type": "date"
            },
            {
              "fieldName": "startTimeItemRubberCement",
              "required": true,
              "label": "Start Time",
              "type": "datetime-local"
            },
            {
              "fieldName": "stopTimeItemRubberCement",
              "required": true,
              "label": "Stop Time",
              "type": "datetime-local"
            }
          ]
        }
      ]
    },
    "rubberCementsBeforeCoating": {
      "queryPath": "operator",
      "pages": [
        {
          "pageTitle": "Rubber Agent",
          "queryPath": "operator",
          "fields": [
            {
              "specValueList": "leadEngineer.data.rubberCementsBeforeCoating",
              "label": "Rubber Agent:"
            },
            {
              "fieldName": "rubberCementsBeforeCoatingMixDate",
              "required": true,
              "label": "Batch Number",
              "type": "date"
            },
            {
              "fieldName": "startTimeRubberCement",
              "required": true,
              "label": "Start Time",
              "type": "datetime-local"
            },
            {
              "fieldName": "stopTimeRubberCement",
              "required": true,
              "label": "Stop Time",
              "type": "datetime-local"
            }
          ]
        }
      ]
